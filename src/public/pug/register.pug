doctype html
html
    - var head_title="とうろく"
    - var head_js_file="register"
    - var head_css_file="page"
    include parts/_head.pug

    body
        - var id="register"
        - var purpose="とうろく"
        - var title=purpose
        include parts/_title.pug
        div.shobo-field
            label なまえ
            .control
                input.input#name(
                    type="text"
                    placeholder="なまえ"
                    )
            label あいことば
            input.input#pass(
                    type="password"
                    placeholder="あいことば"
                    )
            label あいことば(かくにん)
            input.input#pass-verify(
                    type="password"
                    placeholder="あいことば"
                    )
            button.button.shobo-jmp-btn.is-primary.is-rounded.is-outlined(id=`${id}`)
                i.fas.fa-user-plus #{purpose}
            div#register-status-message

